#:import utils kivy.utils

<LoginScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#39B3F2")
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            text: "Email"
            pos_hint:{'top':0.8,'right':1}
            size_hint: .8,.1
            bold: True
            italic: True
        TextInput:
            id:log_email
            hint_text:"Email ID"
            multiline: False
            size_hint:.8,.05
            pos_hint:{'top':0.7,'right':0.9}
        Label:
            text: "Password"
            pos_hint:{'top':0.6,'right':1}
            size_hint: .8,.1
            bold: True
            italic: True
        TextInput:
            id:log_password
            password: True
            hint_text:"Password"
            multiline: False
            size_hint:.8,.05
            pos_hint:{'top':0.5,'right':0.9}
        Button:
            text:"[b]SignIn[/b]"
            markup: True
            size_hint:.3,.07
            pos_hint:{'top':0.4,'right':0.7}
            on_release:
                app.my_firebase.sign_in()
                print("Account: ",login_email.text,login_password.text)
        Button:
            text:"[b]SignUp[/b]"
            markup: True
            size_hint:.3,.07
            pos_hint:{'top':0.3,'right':0.7}
            on_release:
                app.change_screen("signup_screen")



        Button:
            text:"[b]Go Back[/b]"
            markup: True
            size_hint:.3,.07
            pos_hint:{'top':0.2,'right':0.7}
            on_release:
                app.change_screen("home_screen")

